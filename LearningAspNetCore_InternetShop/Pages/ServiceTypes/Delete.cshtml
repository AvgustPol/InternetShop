@page
@model LearningAspNetCore_InternetShop.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Details for the [@Model.ServiceType.Name] ServiceType</h2>
<br />

<div class="border container rounded p-3">
    <div class="row form-group ">
        <div class="col-2 ">
            <label asp-for="ServiceType.Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="ServiceType.Name" class="form-control" readonly />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-2 ">
            <label asp-for="ServiceType.Price"></label>
        </div>
        <div class="col-5">
            <input asp-for="ServiceType.Price" type="number" class="form-control" readonly />
        </div>
    </div>
    <div class="row form-group ">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-12">
                    <h4>Are you sure you want to <strong class="text-danger">delete</strong> this?</h4>
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <a asp-page="./Index" class="btn btn-outline-secondary form-control">Back to list</a>
                </div>
                <div class="col-6">
                    <form method="post">
                        <input type="hidden" asp-for="ServiceType.Id" />
                        <input type="submit"
                               value="Delete"
                               class="btn btn-danger form-control"
                               onclick="return confirm('Are you sure you want to delete this?')" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>