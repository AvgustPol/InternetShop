@page
@model LearningAspNetCore_InternetShop.Pages.ServiceTypes.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create a new ServiceType</h2>
<br />
@*form-group*@
<div class="border container rounded p-3">
    <form method="post">
        <div class="row form-group ">
            <div class="col-2 ">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-2 ">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" type="number" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>
        <div class="row form-group ">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-outline-secondary form-control">Cancel</a>
                    </div>
                    <div class="col-6">
                        <input type="submit" value="Create C:" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}