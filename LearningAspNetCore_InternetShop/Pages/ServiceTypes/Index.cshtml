@page
@model LearningAspNetCore_InternetShop.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="p-4">
    <div class="row">
        <div class="col-6 p-0 m-0">
            <h2>Service types</h2>
        </div>
        <div class="col-6 text-right p-0 m-0">
            <a asp-page="Create" class="btn btn-outline-dark">
                <i class="fas fa-plus"></i>&nbsp Create
            </a>
        </div>
    </div>
    <br />
    <div>
        @if (!Model.IsAnyServiceType)
        {
            <h3 class="text-info">There is no service type exists. </h3>
        }
        else
        {
            <table class="table border table-striped">
                <thead class="bg-dark text-white">
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.ServiceTypes.FirstOrDefault().Name)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.ServiceTypes.FirstOrDefault().Price)</th>
                        <th class="align-right" scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ServiceTypes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Price)</td>
                            <td style="width:15%">
                                <div class="btn-group-sm" role="group">
                                    <a class="btn btn-outline-dark" asp-page="Edit" asp-route-Id="@item.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-dark" asp-page="Details" asp-route-Id="@item.Id">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a class="btn btn-outline-dark" asp-page="Delete" asp-route-Id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>