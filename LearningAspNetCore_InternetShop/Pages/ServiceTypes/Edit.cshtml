@page
@model LearningAspNetCore_InternetShop.Pages.ServiceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit the @Model.ServiceType.Name ServiceType</h2>
<br />

<div class="border container rounded p-3">
    <form method="post">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="row form-group ">
            <div class="col-2 ">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-2 ">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" type="number" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>
        <div class="row form-group ">
            <div class="col-5 offset-2">
                @await Html.PartialAsync("_SubmitAndBackToIndexButtonsPartial", "Update")
            </div>
        </div>
    </form>
</div>

<h1>Edit</h1>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}